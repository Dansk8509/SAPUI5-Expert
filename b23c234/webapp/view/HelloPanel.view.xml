<mvc:View
       
        controllerName="b23c234.controller.HelloPanel"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.iu.core.mvc" >

        <Panel headerText="{i18n>panel}" 
               class="sapUiResponsiveMargin"
                width="auto" >

            <content>

                <Button text="{i18n>helloDialogBtn}"
                        press="onOpenDialog"  
                        class="sapUiSmallMarginEnd" />
                        

                <Button id="button"
                            class="sapUiSmallMarginEnd"
                            text="{i18n>hello}" 
                            width="120px" 
                            type="Emphasized" 
                            tooltip="Mensaje de ToolTipe"
                            press="onShowMessage"/>
                <Input
                    value="{Modelo>/Details/1/Course}"
                    description="{i18n>hello}, {Modelo>/Details/1/Course}"
                   valueLiveUpdate="true"
                    width="60%" />
               
                <Text text="{i18n>hello}, {Modelo>/Details/1/Course}" class="sapUiSmallMarginBegin"/>
            </content>
                  
        </Panel>     

        <core:Fragment fragmentName="b23c234.fragment.Form01"
                       type="XML"/>

</mvc:View>