<core:FragmentDefinition

	xmlns="sap.m"
    xmlns:core="sap.ui.core" >

    <Dialog id="hellogDialog"
            title="{i18n>hello}, {i18n>hello}" >

        <beginButton>
            <Button text="{i18n>OK}" 
                    tooltip="{i18n>OK}"
                    press="onOK"
                    type="Accept"
                    width="4rem" />
        </beginButton>

        <endButton>
            <Button text="{i18n>CANCEL}" 
                    tooltip="{i18n>CANCEL}"
                    press="onCancel"
                    type="Reject"
                    width="6rem" />
        </endButton>

    </Dialog>



</core:FragmentDefinition>